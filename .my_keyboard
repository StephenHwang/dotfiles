! setxkbmap && xmodmap ~/.my_keyboard
! xev
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! remove CapsLock
clear lock
remove Lock = Caps_Lock
remove Shift = Caps_Lock

! add Mode_switch
keycode 66 = NoSymbol NoSymbol
keycode 66 = Mode_switch

! modeswitch+Tab as capslock
keysym Tab = Tab Tab Caps_Lock

! Navigation
keysym j = j J Down
keysym k = k K Up
keysym h = h H Left
keysym l = l L Right
keysym u = u U End 
keysym y = y Y Home
keysym n = n N Next 
keysym m = m M Prior

! Deletion with ∫ and →
keysym i = i I BackSpace U222B
keysym o = o O Delete U2192

keycode 108 = BackSpace


! Keybinds for special characters useful when coding 
keysym 5 = 5 percent percent 
keysym 3 = 3 numbersign numbersign
keysym 9 = 9 parenleft parenleft
keysym 0 = 0 parenright parenright
keysym semicolon = semicolon colon colon
keysym apostrophe = apostrophe quotedbl quotedbl  
keysym bracketleft = bracketleft braceleft braceleft
keysym bracketright = bracketright braceright braceright
keysym minus = minus underscore U2014

! Greek letter and math symbol maps
! see http://kestrel.nmt.edu/~raymond/software/howtos/greekscape.xhtml 
! a : α β "alpha beta"
! d : δ Δ "delta"
! f : π Π "pi" 
! g : γ Γ "gamma" 
! s : σ Σ "sigma"
! z : ω Ω "omega"
! e : θ ε "theta and epsilon"
! r : μ λ "mu and lambda"
! t : ∴ ⋂ "therefore and intersect"
! w : ⊂ ∊ "subset and element of"

keysym a = a A U03B1 U03B2
keysym d = d D U03B4 U0394 
keysym g = g G U03B3 U0393    
keysym f = f F U03C0 U03A0 
keysym s = s S U03C3 U03A3
keysym z = z Z U03C9 U03A9
keysym e = e E U03B8 U03B5
keysym r = r R U03BC U03BB
keysym t = t T U2234 U22C2
keysym w = w W U2282 U220A

