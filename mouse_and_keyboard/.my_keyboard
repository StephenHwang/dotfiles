! setxkbmap && xmodmap ~/.my_keyboard
! xev
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! remove CapsLock
clear lock
remove Lock = Caps_Lock
remove Shift = Caps_Lock

! add Mode_switch
keycode 66 = NoSymbol NoSymbol
keycode 66 = Mode_switch

! alt as backspace
keycode 108 = BackSpace BackSpace Delete

! modeswitch+Tab as capslock
keysym Tab = Tab Tab Caps_Lock

! Navigation
keysym j = j J Down
keysym k = k K Up
keysym h = h H Left
keysym l = l L Right

keysym y = y Y Home
keysym u = u U End

keysym i = i I braceleft
keysym o = o O braceright

keysym p = p P backslash bar

keysym bracketleft = bracketleft braceleft Next
keysym bracketright = bracketright braceright Prior

keysym n = n N bracketleft bracketleft
keysym m = m M bracketright bracketright

keysym comma = comma less less
keysym period = period greater greater

keysym semicolon = semicolon colon colon 
keysym apostrophe = apostrophe quotedbl quotedbl 
keysym slash = slash question question 

! q?
! w`
! e(
! r)
! t~
keysym q = q Q question question
keysym w = w W grave grave 
keysym e = e E parenleft parenleft    
keysym r = r R parenright parenright 
keysym t = t T asciitilde asciitilde

! a!
! s%
! d-
! f_
! g=
keysym a = a A exclam exclam
keysym s = s S percent percent
keysym d = d D minus minus
keysym f = f F underscore underscore
keysym g = g G equal equal

! zâ†’
! x$
! c#
! v+
! b*
keysym z = z Z U2192 U2192
keysym x = x X dollar dollar
keysym c = c C numbersign numbersign
keysym v = v V plus plus
keysym b = b B asterisk asterisk

! numbers
keysym 1 = 1 exclam exclam
keysym 2 = 2 at at
keysym 3 = 3 numbersign numbersign
keysym 4 = 4 dollar dollar
keysym 5 = 5 percent percent 
keysym 6 = 6 asciicircum asciicircum 
keysym 7 = 7 ampersand ampersand 
keysym 8 = 8 asterisk asterisk 
keysym 9 = 9 parenleft parenleft
keysym 0 = 0 parenright parenright
keysym minus = minus underscore U2014
keysym equal = equal plus plus

